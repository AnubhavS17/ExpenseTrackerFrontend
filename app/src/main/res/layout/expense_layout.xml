<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="105dp">

    <TextView
        android:layout_width="200dp"
        android:id="@+id/paymentTV"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        android:text="PAYMENT"
        android:textColor="@color/white"
        android:layout_marginEnd="20dp"
        android:maxLines="1"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/moneyPic"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/paymentTV"
        android:layout_marginStart="20dp"
        android:background="@color/colorPrimary"
        android:layout_marginTop="7dp"
        app:srcCompat="@drawable/money"/>

    <TextView
        android:id="@+id/amountTV"
        android:layout_toEndOf="@+id/moneyPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/paymentTV"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:text="AMOUNT"
        android:textSize="16sp"/>

    <ImageView
        android:id="@+id/categoryPic"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/amountTV"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7dp"
        android:background="@color/colorPrimary"
        app:srcCompat="@drawable/category"/>

    <TextView
        android:id="@+id/categoryTV"
        android:layout_toEndOf="@+id/categoryPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/amountTV"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:text="CATEGORY"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/border2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignParentBottom="true"
        android:background="#808080"/>

</RelativeLayout>