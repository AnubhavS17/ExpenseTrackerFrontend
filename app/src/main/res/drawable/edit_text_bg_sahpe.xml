<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#1E1E1E" /> <!-- Dark gray -->
    <!-- Background color -->
    <solid android:color="#AFAEAE" /> <!-- Dark Gray Background -->

    <!-- Corner radius -->
    <corners android:radius="12dp" />

    <!-- Stroke (optional) -->
    <stroke
        android:width="2dp"
        android:color="#000000" /> <!-- Green border -->

    <!-- Padding inside shape -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>